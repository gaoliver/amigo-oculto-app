{
    "expo": {
        "name": "Amigo Oculto",
        "slug": "amigo-oculto",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "splash": {
            "image": "./assets/splash_img.png",
            "resizeMode": "cover",
            "backgroundColor": "#a52f2a"
        },
        "updates": {
            "fallbackToCacheTimeout": 0
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.gabrielramos.amigo-oculto"
        },
        "android": {
            "package": "com.gabrielramos.amigo_oculto",
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#a52f2a"
            }
        },
        "description": "Aplicativo para brincadeira de Amigo Oculto.",
        "githubUrl": "https://github.com/gaoliver/amigo-oculto-app.git"
    }
}